@model Entrenador

<h1>Nuevo Entrenador</h1>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Foto"></label>
        <input asp-for="Foto" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Pueblo"></label>
        <select asp-for="PuebloId" asp-items="ViewBag.Pueblos" type="text" class="form-control"></select>
    </div>
    <button class="btn btn-primary">Registrar</button>
</form>